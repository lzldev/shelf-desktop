{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/*",
    "src/renderer/*/*",
    "src/renderer/**/*",
    "src/preload/*.d.ts",
    "src/types/**/*",
    "src/main/src/db/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@models": [
        "src/renderer/src/types/db"
      ]
    }
  }
}
