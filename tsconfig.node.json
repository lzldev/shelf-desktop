{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/*",
    "src/main/*/*",
    "src/main/**/*",
    "src/preload/*",
    "src/preload/*/*",
    "src/preload/**/*",
    "src/*",
    "src/*/*",
    "src/**/*",
    "src/types/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@main/*": [
        "src/main/src/*"
      ]
    }
  }
}
