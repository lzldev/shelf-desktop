{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/*",
    "src/main/*/*",
    "src/main/**/*",
    "src/preload/*",
    "src/preload/*/*",
    "src/preload/**/*",
    "src/types/**/*",
    "test/**/*",
    "__mocks__/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true
  }
}
